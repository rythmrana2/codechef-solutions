#include <iostream>
using namespace std;
int main() {
	int T, N,K;

	int sum=0;
	int sum1=0;
	cin>>T;
	while(T>0)
	{
	cin>>N;
	cin>>K;
	int x;
    sum=0;
    sum1=0;
	for(int i=0;i<N;i++)
	{
	    cin>>x;
	    sum1=sum1+x;
	    if(x>K)
	    {
	      x=K;
	    }
	    sum=sum+x;
     }
	    cout<<sum1 - sum<<endl;
	 T--;
	}
	return 0;
}
